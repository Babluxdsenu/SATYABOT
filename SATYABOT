

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $SATYA_REPO == "SATYABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    elif [[ $SATYA_REPO == "SATYABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    elif [[ $SATYA_REPO =~ $regex ]]
    then
        if [[ $SATYA_REPO_BRANCH ]]
        then
            echo "${SATYA_REPO}/archive/${SATYA_REPO_BRANCH}.zip"
        else
            echo "${SATYA_REPO}/archive/SATYA.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    fi
}


_satya_bot () {
    local zippath
    zippath="SATYA.zip"
    echo "  üå™ Downloading Tha SaTyaBoT Source Code... üå™"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  üìçUnpacking Data...üìç"
    echo " Tha SaTyaBoT Is Instaling.. "
    SATYAPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " üí• Download Complete Now Installing üí•"
    echo "  üî± INSTALLING THA SATYABOT üî±"
    rm -rf "$zippath"
    sleep 5
    cd $SATYAPATH
    echo "    ‚ô¶Ô∏èStarting Tha SaTyaBoT‚ô¶Ô∏è     "
    echo " ‚ô•Ô∏è NOW WAIT 5 MIN INSTALLING ALL PLUGIN ‚ô•Ô∏è"
    echo " Loading....... "
    echo " Staring unpacking complete. "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_satya_bot
