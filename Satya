

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $SATYA_REPO == "SATYABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RBUkstTEVHRU5ELVBSTy9QUk8tRFJBR09OUk9CT09UL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    elif [[ $SATYA_REPO == "SATYABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RBUkstTEVHRU5ELVBSTy9QUk8tRFJBR09OUk9CT09UL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    elif [[ $SATYA_REPO =~ $regex ]]
    then
        if [[ $SATYA_REPO_BRANCH ]]
        then
            echo "${SATYA_REPO}/archive/${SATYA_REPO_BRANCH}.zip"
        else
            echo "${SATYA_REPO}/archive/Satya.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RBUkstTEVHRU5ELVBSTy9QUk8tRFJBR09OUk9CT09UL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    fi
}


_satya_bot () {
    local zippath
    zippath="Satya.zip"
    echo "  üî∞ Downloading Pro SatyaBot Source Code... üî∞"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  üìçUnpacking Data...üìç"
    SATYAPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " üèÖ Download Complete Now Installing üèÖ"
    echo "  ‚ú® INSTALLING PRO SATYABOT ‚ú®"
    rm -rf "$zippath"
    sleep 5
    cd $SATYAPATH
    echo "    ‚öúÔ∏èStarting Pro Satya·∫û√∏t‚öúÔ∏è     "
    echo " ‚ô•Ô∏è NOW WAIT 3 MIN INSTALLING ALL PLUGIN ‚ô•Ô∏è"
    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_satya_bot
